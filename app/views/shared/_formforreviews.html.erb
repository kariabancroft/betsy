<h3>Add a Review:</h3>

<div class="form-group">
  <%= form_for @review, url: create_review_path do |f| %>
    <%= f.label :rating %>
    <%= f.number_field :rating, :required => true, :max => 5, :min => 0 %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.hidden_field :product_id, :value => @product.id %>
    <%= f.submit "Add", class: "btn btn-default" %>
  <% end %>
</div>
