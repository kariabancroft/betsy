<div class="container">
  <%= render 'layouts/navbar' %>
  <div class="row">
    <div class="col-md-12">
      <h1>Browse <%= @merchant.username %>'s Products</h1>
    </div>
  </div>

  <div class="row">
    <% if @products.count == 0 || @products.count == @retiredproducts.count %>
      <div class="col-md-12">
        <h3>We're sorry, <%= @merchant.username %> does not have anything for sale right now.</h3>
      </div>
    <% else %>
      <% @products.each_with_index do |product, i| %>
        <% if product.quantity != 0 %>
          <% if product.status == "Active" %>
            <% if i + 1 % 3 == 0 %>
              <div class="row">
            <% end %>
            <div class="col-sm-4 col-md-4">
              <div class="thumbnail">
                <% if product.image_file_name.nil? %>
                  <%= image_tag(product.photo_url, :size => "300x169") %>
                <% else %>
                <%= image_tag(product.image.url(:medium))%>
                <% end %>
                <div class="caption">
                  <%= link_to product.name, product_path(product.id), class: "h3" %>
                </div>
              </div>
            </div>
            <% if i + 1 % 3 == 0 %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
